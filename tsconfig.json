{
    "compilerOptions": {
        "target": "es5",
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "out/js/",
        "sourceMap": true,
        "allowJs": true,
        "baseUrl": "src/ts/"
    },
    "include": [
        "src/ts/**/*"
    ]
}
